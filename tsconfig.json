{
  "compilerOptions": {
    "target": "es2018",
    "module": "Node16",
    "moduleResolution": "Node16",
    "esModuleInterop": true,
    "baseUrl": "./",
    "outDir": "./dist",
    "paths": {
      "*": ["src/types/*"]
    },
    "types": ["node", "jest"],
    "typeRoots": ["node_modules/@types"],
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["**/*.ts", "src/types/**/*.d.ts"],
  "exclude": ["node_modules", "__tests__", "testcases"]
}
